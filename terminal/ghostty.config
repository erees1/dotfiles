shell-integration = zsh
mouse-hide-while-typing = true
scrollback-limit = 5000000
copy-on-select = clipboard

# Disable ligatures
font-feature=-calt,-liga,-dlig

#window-title-font-family="CommitMono Nerd Font"
selection-background = #ffff00

# Make split borders more visible
split-divider-color = #f0f0f0

# Add padding
window-padding-x = 8
window-padding-y = 8

keybind = ctrl+a>equal=equalize_splits

keybind = ctrl+a>h=goto_split:left
keybind = ctrl+a>j=goto_split:bottom
keybind = ctrl+a>k=goto_split:top
keybind = ctrl+a>l=goto_split:right

keybind = ctrl+a>v=new_split:left
keybind = ctrl+a>s=new_split:down
keybind = ctrl+a>S=new_split:up
keybind = ctrl+a>V=new_split:right
keybind = ctrl+a>f=toggle_split_zoom

keybind = ctrl+a>c=new_tab
keybind = ctrl+a>n=next_tab
keybind = ctrl+a>p=previous_tab

keybind = super+r=reload_config

keybind = ctrl+a>1=goto_tab:1
keybind = ctrl+a>2=goto_tab:2
keybind = ctrl+a>3=goto_tab:3
keybind = ctrl+a>4=goto_tab:4
keybind = ctrl+a>5=goto_tab:5

window-save-state = always

