#compdef wt

# AUTOCOMPLETION FOR ZSH
# Reference: https://zsh.sourceforge.io/Doc/Release/Completion-Widgets.html

local -a opts
list="$(git worktree list | awk '{ print $1; }' | tr "\n" " ")"

setopt shwordsplit
for item in $list; do
    base="$(basename -- "$item")"
    opts+=("$base")
done

_describe 'command' opts
